@model IEnumerable<AuraInventarioProto.Models.INV_PC>

@{
    ViewBag.Title = "Inventario de Pc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventario de Pc</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
@if (!Model.Any()) {
    <text>No hay Inventario.</text>
} else {
    <table class="table table-striped table-bordered table-hover table-responsive display compact" id="Inventario_PC">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SERIAL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MODELO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MARCA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TIPO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ESTADO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA_ADQ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SGI_SW)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SGI_RES)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.F_UL_MAN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DEVU)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ASIGN_DEVU)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OBRA)
                </th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SERIAL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MODELO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MARCA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TIPO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ESTADO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHA_ADQ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SGI_SW)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SGI_RES)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.F_UL_MAN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEVU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ASIGN_DEVU)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OBRA)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section scripts{
        <script>
            $(document).ready(function () {
                $('#Inventario_PC').DataTable({
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                    },
                });
            });
        </script>
    }
}
