    </div>
</div>

<div class="row"></div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            $(document).ready(function () {

                $('#OBRA').chosen({
                    no_results_text: "No hay resultados para ",
                    max_shown_results: 7,
                    placeholder_text_single: "Seleccione",
                    width: "31%"

                });
                //$('#ESTADO').chosen({
                //    disable_search: "true",
                //    placeholder_text_single: "Seleccione",
                //    width: "31%"
                //});
                $('#TIPO').chosen({
                    disable_search: "true",
                    placeholder_text_single: "Seleccione",
