@model AuraInventarioProto.ViewModels.ValidationViewModels.DetManValidationViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestionar Mantención</h2>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="col-lg-6">
            <div class="form-horizontal well bs-component animated fadeInLeftBig ">
                <h4>Mantención</h4>
                <hr />
                @Html.HiddenFor(model => model.DEVU)
                @Html.HiddenFor(model => model.ASIGN)
                @Html.HiddenFor(model => model.ESTADO)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.SERIAL, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SERIAL, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase" , @disabled ="disabled" } })
                        @Html.ValidationMessageFor(model => model.SERIAL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MODELO, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MODELO, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase" } })
                        @Html.ValidationMessageFor(model => model.MODELO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MARCA, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MARCA, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase" } })
                        @Html.ValidationMessageFor(model => model.MARCA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TIPO, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.TIPO, new SelectList(
                       new List<Object>{
                           new { value = "AIO" , text = "All in One"  },
                           new { value = "NOTEBOOK" , text = "Notebook" },
                       }, "value", "text", 2), new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TIPO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FECHA_ADQ, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FECHA_ADQ, new { htmlAttributes = new { @class = "form-control", @id = "date", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.FECHA_ADQ, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_TW, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_TW, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_TW, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_CC, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_CC, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_CC, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_AV, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_AV, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_AV, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_PD, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_PD, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_PD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_OF, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_OF, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_OF, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_WN, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_WN, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_WN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EST_REG, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.EST_REG, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.EST_REG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SGI_SW, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.SGI_SW, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.SGI_SW, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SGI_RES, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.CheckBoxFor(model => model.SGI_RES, new { htmlAttributes = new { @class = "form-control", @value = "true" } })
                        @Html.ValidationMessageFor(model => model.SGI_RES, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.F_UL_MAN, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.F_UL_MAN, new { htmlAttributes = new { @class = "form-control", @id = "date2", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.F_UL_MAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OBRA, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.OBRA, new SelectList(
                          ViewBag.Obra, "value", "text", 2), new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OBRA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OBS, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.OBS, 5, 100, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OBS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
        

<div class="col-lg-6">
    <div class="well bs-component animated fadeInRightBig">
        <h4>Detalle De Última Mantención</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Serial:</dt>
            <dd>@ViewBag.vserial</dd>

            <dt>Modelo:</dt>
            <dd>@ViewBag.vmodelo</dd>

            <dt>Marca:</dt>
            <dd>@ViewBag.vmarca</dd>

            <dt>Tipo:</dt>
            <dd>@ViewBag.vtipo</dd>

            <dt>Estado:</dt>
            <dd>@ViewBag.vestado</dd>

            <dt>Fecha Adquisición:</dt>
