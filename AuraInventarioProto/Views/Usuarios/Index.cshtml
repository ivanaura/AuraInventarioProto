@model List<AuraInventarioProto.Models.UsuariosModels>
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Usuarios</h2>
@if (!Model.Any()) {
    <text>No hay usuarios.</text>
} else {
    <table class="table table-striped table-hover " title="Usuarios">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Une</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model) {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@Html.ActionLink(usuario.Nombre, "Detalles", "Usuarios", new { id = usuario.Id }, null)</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Une</td>
                </tr>
            }
        </tbody>
    </table>
}