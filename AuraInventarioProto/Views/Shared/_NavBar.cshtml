@{
    string CurrentURL = Request.Url.AbsoluteUri;
}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <img src="~/Content/Img/logo.gif" style="max-height:200px; max-width:127px;" />
            </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                @if (!(Session["UserID"] == null)) {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Vistas<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Vistas Usuarios", "Index", "USUARIOS")</li>
                            <li>@Html.ActionLink("Vistas Inventarios PC", "Index", "INV_PC")</li>
                            <li>@Html.ActionLink("Vistas Movimientos", "Index", "MOVIMIENTOS_PC")</li>
                            <li>@Html.ActionLink("Vistas Detalles de Mantenciones", "Index", "DETMAN")</li>
                        </ul>
                    </li>

                    if (Session["UserRole"].ToString() != "ReadOnly") {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Ingresos<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Ingreso de Usuarios", "Create", "USUARIOS")</li>
                                <li>@Html.ActionLink("Ingreso de Inventarios PC", "Create", "INV_PC")</li>
                                <li>@Html.ActionLink("Ingreso de Movimientos", "Create", "MOVIMIENTOS_PC")</li>
                            </ul>
                        </li>
                    }

                    if (Session["UserRole"].ToString() == "Admin") {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Mantenedores<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Cuentas", "Index", "LOGIN")</li>
                                <li>@Html.ActionLink("Obras", "Index", "UNE")</li>
                            </ul>
                        </li>
                    }
                }
                @if (!(Session["UserID"] == null)) {
                    if (Session["UserRole"].ToString() == "Admin") {
                        if ((CurrentURL.Contains("Create")) && CurrentURL.Contains("INV_PC") || CurrentURL.Contains("USUARIOS")) {
                            <li><a href="#" data-toggle="modal" data-target="#myModal">Ingresos Masivos</a></li>
                        }
                    }
                }
            </ul>

            @if (Session["UserID"] == null) {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" data-toggle="modal" data-target="#LoginModal">Iniciar Sesión</a></li>
                </ul>
            } else {
                <ul class="nav navbar-nav navbar-right ">
                    <li><div class="navbar-text">Usuario: @Session["UserName"]</div></li>
                    @*<li>@Ajax.ActionLink("Desloguear","Logout", new AjaxOptions { HttpMethod = "POST" })</li>*@
                    <li>@Html.ActionLink("Cerrar Sesión", "Logout", "Home")</li>
                </ul>
            }
        </div>
    </div>
</nav>
