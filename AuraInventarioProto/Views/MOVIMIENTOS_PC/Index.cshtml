@model AuraInventarioProto.ViewModels.Movimientos_PcIndexViewModel

@{
    ViewBag.Title = "Movimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Movimientos PC</h2>

<p>
    @if (Session["UserRole"].ToString() != "ReadOnly") {
        @Html.ActionLink("Crear Nuevo", "Create")
    }    
</p>
<hr />
@if (!Model.Movimientos_Pc.Any()) {

    <text>No hay Movimientos.</text>
} else {
    <table class="table table-striped table-bordered table-hover table-responsive display compact" id="Movimientos">
        <thead>
            <tr>
                <th>
                    Rut Usuario
                </th>
                <th>
                    Nombre Completo
                </th>
                <th>
                    Serial PC
                </th>
                <th>
                    Tipo Movimiento
                </th>
                <th>
                    Fecha Movimiento
                </th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movimientos_Pc) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RUT_USUARIO)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Usuarios.FirstOrDefault(x => x.RUT == item.RUT_USUARIO).NOMBRE_C)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_PC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TIPO_MOV)
                    </td>
                    <td>
                        @Html.ValueFor(modelItem => item.FECHA_MOV, "{0:dd-MM-yyyy}")
                    </td>
                    <td style="text-align:center">
                        @{
                            if (Session["UserRole"].ToString() != "ReadOnly") {
                                @*@Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit", @data_toggle = "tooltip", @data_placement = "left", @data_original_title = "Editar" }) <text>|</text>*@
                                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "glyphicon glyphicon-info-sign", @data_toggle = "tooltip", @data_placement = "left", @data_original_title = "Detalles" }) @*<text>|</text>*@
                                @*@Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-remove", @data_toggle = "tooltip", @data_placement = "left", @data_original_title = "Eliminar" })*@
                            } else {
                                @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "glyphicon glyphicon-info-sign", @data_toggle = "tooltip", @data_placement = "left", @data_original_title = "Detalles" })

                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section scripts{
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/pdfmake-0.1.18/dt-1.10.13/b-1.2.4/b-colvis-1.2.4/b-flash-1.2.4/b-html5-1.2.4/r-2.1.1/sc-1.4.2/se-1.2.0/datatables.min.css" />
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/pdfmake-0.1.18/dt-1.10.13/b-1.2.4/b-colvis-1.2.4/b-flash-1.2.4/b-html5-1.2.4/r-2.1.1/sc-1.4.2/se-1.2.0/datatables.min.js"></script>

<script type="text/javascript">
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
</script>
        <script>
            $(function () {
                $('#Movimientos').DataTable({
                    "language": { "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json" },
                    "order": [[4, "desc"]],
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            extend: 'excelHtml5',
                            exportOptions: {
                                orthogonal: 'sort',
                                columns: [':not(:last-child)'],
                            }
                        },
                        {
                            extend: 'pdfHtml5',
                            exportOptions: {
                                orthogonal: 'sort',
                                columns: [0, 1, 2, 3]
                            }
                        }],
                });
            });
        </script>
    }

}
